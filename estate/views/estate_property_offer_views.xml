<?xml version="1.0"?>
<odoo>
    <record id="estate_model_offer_action" model="ir.actions.act_window">
        <field name="name">Estate offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Estate offers
          </p>
        </field>
    </record>
    <record id="estate_view_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="offers list">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="offer_accept" type="object" string="Accept" icon="fa-check" invisible="status"/>
                <button name="offer_refuse" type="object" string="Refuse" icon="fa-times" invisible="status"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="estate_view_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="form test">
                <sheet>
                    <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>